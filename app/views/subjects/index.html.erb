<h1>Listing Subjects</h1>
<%= link_to 'New subject', new_subject_path %>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.id %></td>
      <td><%= subject.name %></td>
      <td><%= link_to 'Show', subject_path(subject) %></td>
      <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
      <td><%= link_to 'Destroy', subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>